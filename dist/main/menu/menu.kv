#:kivy 1.9.1
#:import SavesScrollView menu.saves
#:import SavesData menu.saves

<SavesDataButton>:
    height: self.minimum_height

<SavesData>:
    name: 'saves_data'
    height: self.minimum_height
    cols: 1
    spacing: 1

<MenuScreen>:
    name: 'menu_screen'
    id: menu_screen
    map_preview: preview_image
    gen_map_btn: gen_btn
    
    BoxLayout:
        orientation: 'vertical'
        Image:
            id: preview_image
            source: 'ss2.png'
            allow_stretch: 'True'
            size_hint_y: 0.7
            
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.3
            Button:
                id: gen_btn
                text: 'Generate Map'
                on_press: root.generateMap()
            Button:
                text: 'Enter Map'
                on_press: root.enterMap()
            SavesScrollView:
                name: 'saves_display'
                SavesData:
